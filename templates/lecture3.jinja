{% extends 'layout.jinja' %}
{% block content %}
{%if flag==0%}
    <p class="alert alert-warning" role="alert">Enter your name, please</p>
{%endif%}
<h1>Lecture 3</h1>
{# <form action="http://www.google.com/search">
