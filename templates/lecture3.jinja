<form action="{{url_for('sbm')}}" method="post">
     <input name="name" type="text"
     autofocus autocomplete="off"
     placeholder="Enter your name">
     <button>Submit</button>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function(){
        if ({{flag}}==0){
            document.querySelector('[name="name"]').style.backgroundColor='#ff5555';
        } else {
            document.querySelector('[name="name"]').style.backgroundColor='white';
        }
    })
</script>

{% endblock  content%}